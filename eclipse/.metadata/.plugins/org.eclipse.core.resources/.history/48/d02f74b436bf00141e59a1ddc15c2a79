package net.riftnetwork.zudomc.morepies;

import java.util.List;

import net.minecraft.block.material.Material;
import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.init.Items;
import net.minecraft.item.Item;
import net.minecraft.item.ItemFood;
import net.minecraft.item.ItemStack;
import net.minecraft.util.EnumChatFormatting;

public class ZudoPie extends ItemFood {

	public ZudoPie(int p1, int p2, float p3, boolean p4) {
		super(p1, p2, p3, p4)
		setUnlocalizedName(MorePies.MOD_ID + "_zudoPie");
		setTextureName(MorePies.MOD_ID + ":" + "zudoPie");
	}
	
	@Override
	public void addInformation(ItemStack par1ItemStack, EntityPlayer par2EntityPlayer, List par3List, boolean par4)
	{
		par3List.add(EnumChatFormatting.BLUE + "Tastes like genetically-modified pork.");
	}
}
